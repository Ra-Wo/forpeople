<% if (resultx) {
    %>
    <div style="overflow: hidden" class="alert alert-warning m-0 p-0" role="alert">
        <div class="row">
            <i style="font-size:23px; margin-left: 10px" class="col-1 py-2 ri-error-warning-line"></i>

            <div class='col mt-3'>
                <%= resultx %>
            </div>
        </div>
    </div>
        <%
    } %>


    <main class="login-form">
        <div class="cotainer">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            Log in
                        </div>
                        <div class="card-body">
                            <form action="/LogIn" method="post">
                                <div class="form-group row my-2">
                                    <label for="email_address" class="col-md-4 col-form-label text-md-right">E-Mail Address</label>
                                    <div class="col-md-6">
                                        <input type="text" id="email_address" class="form-control" name="Email" required autofocus>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="password" class="col-md-4 col-form-label text-md-right">Password</label>
                                    <div class="col-md-6">
                                        <input type="password" id="password" class="form-control" name="Password" required>
                                    </div>
                                </div>

                                <div class="form-group row mt-3">
                                    <div class="col-md-6 offset-md-4">
                                        <div class="checkbox">
                                            <label>
                                                <input class="form-check-input" type="checkbox" name="remember"> Remember Me
                                            </label>


                                            <div class="row mt-4">
                                                <button type="submit" class="col-4 btn btn-primary">
                                                    Register
                                                </button>
                                                <a href="#" style='text-decoration: none; font-size: 14px' class="col btn btn-link">
                                                    Forgot Your Password?
                                                </a>

                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>





